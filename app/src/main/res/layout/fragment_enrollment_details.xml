<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_F4F5F6">

            <LinearLayout
                    android:id="@+id/studentEnrollInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp10">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/lato_regular"
                            android:orientation="horizontal">

                        <ImageView
                                android:id="@+id/studentImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/dp10"
                                android:src="@drawable/ic_account"
                            app:tint="@color/black"
                            android:contentDescription="TODO" />

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:text="@string/student"
                                    android:textSize="@dimen/text_14" />

                            <TextView
                                    android:id="@+id/studentName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_14"
                                    tools:text="Charlie Lin" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/dp10"
                                android:src="@drawable/ic_lesson"
                            app:tint="@color/black"
                            android:contentDescription="TODO" />

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:text="@string/lesson_day"
                                    android:textSize="@dimen/text_14" />

                            <TextView
                                    android:id="@+id/lessonDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_14"
                                    tools:text="Charlie Lin" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp10">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/lato_regular"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/dp10"
                                android:src="@drawable/ic_baseline_music"
                            android:contentDescription="TODO" />

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:text="@string/lesson_type"
                                    android:textSize="@dimen/text_14" />

                            <TextView
                                    android:id="@+id/lessonType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_14"
                                    tools:text="Charlie Lin" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/dp10"
                                android:src="@drawable/ic_baseline_access"
                            app:tint="@color/black"
                            android:contentDescription="TODO" />

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:text="@string/regular_time"
                                    android:textSize="@dimen/text_14" />

                            <TextView
                                    android:id="@+id/lessonTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_14"
                                    tools:text="Charlie Lin" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp10">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/lato_regular"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/dp10"
                                android:src="@drawable/ic_account"
                            app:tint="@color/black"
                            android:contentDescription="TODO" />

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:text="@string/teacher"
                                    android:textSize="@dimen/text_14" />

                            <TextView
                                    android:id="@+id/teacherName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_14"
                                    tools:text="Charlie Lin" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/dp10"
                                android:src="@drawable/ic_baseline_timelapse"
                            app:tint="@color/black"
                            android:contentDescription="TODO" />

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:text="@string/duration"
                                    android:textSize="@dimen/text_14" />

                            <TextView
                                    android:id="@+id/lessonDuration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_14"
                                    tools:text="Charlie Lin" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp10">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/lato_regular"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/dp10"
                                android:src="@drawable/ic_baseline_checkbox"
                            android:contentDescription="TODO" />

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:text="@string/status"
                                    android:textSize="@dimen/text_14" />

                            <TextView
                                    android:id="@+id/enrollmentStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_14"
                                    tools:text="Charlie Lin" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/dp10"
                                android:src="@drawable/ic_baseline_location"
                            app:tint="@color/black"
                            android:contentDescription="TODO" />

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:text="@string/location"
                                    android:textSize="@dimen/text_14" />

                            <TextView
                                    android:id="@+id/lessonLocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_14"
                                    tools:text="Charlie Lin" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_0.5"
                    android:layout_below="@+id/studentEnrollInfo"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/grey_text" />

            <TextView
                    android:id="@+id/textBilling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view1"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp20"
                    android:text="@string/package_details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_18"
                    android:textStyle="bold" />

            <LinearLayout
                    android:id="@+id/userInfoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textBilling"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/white"
                    android:orientation="vertical">

                <RelativeLayout
                        android:id="@+id/personalDetailsRl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_6"
                        android:padding="@dimen/dp10">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/textPackage"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16" />

                    <TextView
                            android:id="@+id/packageInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            tools:text="Piano Lesson 4*45min" />
                </RelativeLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_0.5"
                        android:layout_marginTop="@dimen/margin_5"
                        android:background="@color/grey_text" />

                <RelativeLayout
                        android:id="@+id/studentRl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_6"
                        android:padding="@dimen/dp10">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/package_price"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16" />

                    <TextView
                            android:id="@+id/packagePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            tools:text="Piano Lesson 4*45min" />
                </RelativeLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_0.5"
                        android:layout_marginTop="@dimen/margin_5"
                        android:background="@color/grey_text" />

                <RelativeLayout
                        android:id="@+id/notificationRl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_6"
                        android:padding="@dimen/dp10">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/next_bill_date"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_16" />

                        <TextView
                                android:id="@+id/packageBillDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                tools:text="Piano Lesson 4*45min" />

                    </RelativeLayout>

                </RelativeLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_0.5"
                        android:layout_marginTop="@dimen/margin_5"
                        android:background="@color/grey_text" />
            </LinearLayout>

            <Button
                    android:id="@+id/editPersonalDetails"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40"
                    android:layout_alignParentBottom="true"
                    android:background="@color/md_amber_700"
                    android:fontFamily="@font/lato_bold"
                    android:text="Change Enrollment"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16" />


        </RelativeLayout>
    </ScrollView>

</layout>

