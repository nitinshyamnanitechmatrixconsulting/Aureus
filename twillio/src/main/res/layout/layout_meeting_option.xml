<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_353b3e">

        <RelativeLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <View
                android:id="@+id/dividerLine"
                style="@style/Divider.Horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="@dimen/margin_20" />

            <LinearLayout
                android:id="@+id/controlLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dividerLine"
                android:layout_marginBottom="@dimen/margin_20"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_20"
                android:paddingEnd="@dimen/margin_20">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20">

                    <LinearLayout
                        android:id="@+id/showParticipants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_10">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp_25"
                            android:layout_alignParentLeft="true"
                            app:srcCompat="@drawable/participants_active" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imv_participant"
                            android:text="@string/participants"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/showMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_10">

                        <androidx.appcompat.widget.AppCompatImageView

                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp_25"
                            app:srcCompat="@drawable/messages_active" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/messages"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/showInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_10">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp_25"
                            app:srcCompat="@drawable/information_active" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imv_participant"
                            android:text="@string/information"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <LinearLayout
                            android:id="@+id/showFiles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_10">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/dp60"
                                android:layout_height="@dimen/dp_25"
                                android:layout_alignParentLeft="true"
                                app:srcCompat="@drawable/files_active" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imv_participant"
                                android:text="@string/files"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/showPresentScreen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_10"
                            android:tag="1">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivScreenshare"
                                android:layout_width="@dimen/dp60"
                                android:layout_height="@dimen/dp_25"
                                android:layout_alignParentLeft="true"
                                app:srcCompat="@drawable/present_screen_active" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivScreenshare"
                                android:text="@string/present_screen"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/showLayoutOption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_marginLeft="@dimen/margin_35"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_10">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/dp60"
                                android:layout_height="@dimen/dp_25"
                                android:layout_alignParentLeft="true"
                                app:srcCompat="@drawable/layout_active" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imv_participant"
                                android:text="@string/Layout"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>